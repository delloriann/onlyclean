---
/**
 * Hero Component for Only Clean Homepage
 * Full-screen hero with geo-targeted H1 for London SEO
 */

interface Props {
  headline?: string;
  subheadline?: string;
  ctaText?: string;
  ctaLink?: string;
  heroImage?: string;
  trustBadgeText?: string;
  showTrustBadge?: boolean;
  phone?: string;
}

const {
  headline = "London's Freshest Carpets, Guaranteed.",
  subheadline = "Eco-friendly deep cleaning for homes in Kensington, Camden, Islington & Central London.",
  ctaText = "Book Your Free Quote",
  ctaLink = "/contact",
  heroImage = "/images/cleaner-hero.png",
  trustBadgeText = "Rated 4.9â˜… by 127+ London homes",
  showTrustBadge = true,
  phone = "+442012345678"
} = Astro.props;
---

<section 
  class="relative min-h-screen bg-primary-cyan overflow-hidden flex items-center"
  aria-label="Hero section"
>
  <!-- Decorative Background Elements -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <!-- Subtle bubble/sparkle decorations -->
    <div class="absolute top-20 left-10 w-4 h-4 bg-white/30 rounded-full animate-pulse"></div>
    <div class="absolute top-40 right-20 w-6 h-6 bg-white/20 rounded-full animate-pulse delay-300"></div>
    <div class="absolute bottom-40 left-1/4 w-3 h-3 bg-white/40 rounded-full animate-pulse delay-500"></div>
    <div class="absolute top-1/3 right-1/3 w-5 h-5 bg-white/25 rounded-full animate-pulse delay-700"></div>
    <div class="absolute bottom-1/4 right-10 w-4 h-4 bg-white/35 rounded-full animate-pulse delay-1000"></div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
      
      <!-- Content Column -->
      <div class="text-center lg:text-left pt-20 lg:pt-0">
        
        <!-- Trust Badge -->
        {showTrustBadge && (
          <div class="inline-flex items-center gap-2 bg-white/20 backdrop-blur-sm rounded-full px-4 py-2 mb-6">
            <span class="flex h-2 w-2 relative">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
              <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
            </span>
            <span class="text-sm font-medium text-primary-dark">
              {trustBadgeText}
            </span>
          </div>
        )}

        <!-- H1 - SEO Geo-Targeted Headline -->
        <h1 class="font-heading text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-bold text-primary-dark leading-tight mb-6">
          {headline}
        </h1>

        <!-- Mobile Image - Shows between headline and subheadline on mobile only -->
        <div class="lg:hidden relative flex justify-center mb-6">
          <div class="relative w-full max-w-sm">
            <div class="absolute inset-0 bg-white/20 rounded-full blur-3xl transform scale-75"></div>
            <img
              src={heroImage}
              alt="Professional carpet cleaner with equipment in London"
              width="400"
              height="467"
              loading="eager"
              fetchpriority="high"
              decoding="async"
              class="relative z-10 w-full h-auto object-contain drop-shadow-2xl"
            />
          </div>
        </div>

        <!-- Subheadline -->
        <p class="text-lg sm:text-xl text-primary-dark/80 max-w-xl mx-auto lg:mx-0 mb-8 leading-relaxed">
          {subheadline}
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a 
            href={`tel:${phone.replace(/\s/g, '')}`}
            class="inline-flex items-center justify-center gap-2 bg-primary-dark text-white font-semibold text-lg px-8 py-4 rounded-full hover:bg-primary-dark/90 transition-all duration-300 hover:scale-105 hover:shadow-xl min-h-[52px] touch-manipulation"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
            </svg>
            Call Now
          </a>
          
          <a 
            href={`https://wa.me/${phone.replace(/[\s+]/g, '')}`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center gap-2 bg-[#25D366] text-white font-semibold text-lg px-8 py-4 rounded-full hover:bg-[#22c55e] transition-all duration-300 hover:shadow-lg min-h-[52px] touch-manipulation"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            Text us on WhatsApp
          </a>
        </div>
      </div>

      <!-- Desktop Image Column - Hidden on mobile (shown inline above) -->
      <div class="hidden lg:flex relative justify-center lg:justify-end">
        <div class="relative w-full max-w-md lg:max-w-lg xl:max-w-xl">
          <!-- Glow effect behind image -->
          <div class="absolute inset-0 bg-white/20 rounded-full blur-3xl transform scale-75"></div>
          
          <!-- Hero Image - Cleaner/Sofa cutout -->
          <img
            src={heroImage}
            alt="Professional carpet cleaner with equipment in London"
            width="600"
            height="700"
            loading="eager"
            fetchpriority="high"
            decoding="async"
            class="relative z-10 w-full h-auto object-contain drop-shadow-2xl"
            srcset={`${heroImage.replace('.png', '-400w.png')} 400w, ${heroImage.replace('.png', '-600w.png')} 600w, ${heroImage.replace('.png', '-800w.png')} 800w, ${heroImage} 1200w`}
            sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 600px"
          />
        </div>
      </div>

    </div>
  </div>

  <!-- Scroll Indicator (Desktop only) -->
  <div class="hidden lg:block absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <a href="#services" class="text-primary-dark/50 hover:text-primary-dark transition-colors" aria-label="Scroll to services">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </a>
  </div>
</section>

<style>
  /* Custom animation delays */
  .delay-300 { animation-delay: 300ms; }
  .delay-500 { animation-delay: 500ms; }
  .delay-700 { animation-delay: 700ms; }
  .delay-1000 { animation-delay: 1000ms; }
</style>
