---
/**
 * Sticky Footer CTA - Mobile Book Now Bar
 * Fixed at bottom of viewport for easy thumb access
 */

interface Props {
  ctaText?: string;
  ctaLink?: string;
  phoneNumber?: string;
}

const {
  ctaText = "Book Now",
  ctaLink = "/contact",
  phoneNumber = "+442012345678"
} = Astro.props;
---

<!-- Mobile Sticky Footer - Only visible on mobile/tablet -->
<div class="lg:hidden fixed bottom-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-md border-t border-gray-200 shadow-[0_-4px_20px_rgba(0,0,0,0.1)] safe-area-bottom">
  <div class="container mx-auto px-4 py-3">
    <div class="flex items-center justify-between gap-3">
      
      <!-- Phone Button -->
      <a 
        href={`tel:${phoneNumber}`}
        class="flex-1 inline-flex items-center justify-center gap-2 bg-primary-cyan text-primary-dark font-semibold py-4 px-4 rounded-xl hover:bg-primary-cyan/90 transition-all duration-200 min-h-[52px] touch-manipulation"
        aria-label="Call us now"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
        </svg>
        <span class="hidden sm:inline">Call</span>
      </a>

      <!-- Book Now Button - Primary CTA -->
      <a 
        href={ctaLink}
        class="flex-[2] inline-flex items-center justify-center gap-2 bg-primary-dark text-white font-bold py-4 px-6 rounded-xl hover:bg-primary-dark/90 transition-all duration-200 min-h-[52px] touch-manipulation"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
        </svg>
        {ctaText}
      </a>

    </div>
  </div>
</div>

<style>
  /* Safe area for devices with home indicator (iPhone X+) */
  .safe-area-bottom {
    padding-bottom: env(safe-area-inset-bottom, 0);
  }
</style>
