---
/**
 * Base Layout for Only Clean
 * Includes Google Fonts, global styles, and mobile sticky footer
 */

import SEO from '../components/SEO.astro';
import StickyFooter from '../components/StickyFooter.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  image?: string;
  phone?: string;
}

const { title, description, image, phone = "+442012345678" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en-GB">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  
  <!-- Preconnect to Google Fonts for performance -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  
  <!-- Google Fonts - Fraunces (Headings) + Inter (Body) -->
  <link 
    href="https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght@9..144,400;9..144,500;9..144,600;9..144,700;9..144,800&family=Inter:wght@400;500;600;700&display=swap" 
    rel="stylesheet"
  />
  
  <!-- SEO Component -->
  <SEO 
    title={title}
    description={description}
    image={image}
  />
  
  <!-- Theme Color for Mobile Browsers -->
  <meta name="theme-color" content="#2CD5E5" />
  <meta name="msapplication-TileColor" content="#2CD5E5" />
</head>
<body class="antialiased bg-white text-gray-900 overflow-x-hidden">
  
  <!-- Skip to main content for accessibility -->
  <a 
    href="#main-content" 
    class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[100] focus:bg-primary-dark focus:text-white focus:px-4 focus:py-2 focus:rounded-lg"
  >
    Skip to main content
  </a>
  
  <!-- Main Content -->
  <main id="main-content">
    <slot />
  </main>
  
  <!-- Mobile Sticky Footer CTA -->
  <StickyFooter phoneNumber={phone.replace(/\s/g, '')} />
  
  <!-- Spacer for mobile sticky footer -->
  <div class="lg:hidden h-20" aria-hidden="true"></div>
  
</body>
</html>
