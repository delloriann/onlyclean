---
/**
 * Homepage - Only Clean
 * Professional Carpet Cleaning in London
 */

import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';

// Import content from CMS JSON files
import heroData from '../content/homepage/hero.json';
import settings from '../content/settings/general.json';

// Extract data from CMS
const { seo, hero, trustBadge } = heroData;
---

<Layout 
  title={seo.seoTitle}
  description={seo.seoDescription}
  image={seo.ogImage}
  phone={settings.phone}
  logo={settings.logo}
>
  <!-- Hero Section -->
  <Hero 
    headline={hero.headline}
    subheadline={hero.subheadline}
    heroImage={hero.heroImage}
    trustBadgeText={trustBadge.text}
    showTrustBadge={trustBadge.show}
    phone={settings.phone}
  />
  
</Layout>
