---
/**
 * Homepage - Only Clean
 * Professional Carpet Cleaning in London
 */

import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';

// Import content from CMS JSON files
import heroData from '../content/homepage/hero.json';

// Extract data from CMS
const { seo, hero, trustBadge } = heroData;
---

<Layout 
  title={seo.seoTitle}
  description={seo.seoDescription}
  image={seo.ogImage}
>
  <!-- Hero Section -->
  <Hero 
    headline={hero.headline}
    subheadline={hero.subheadline}
    ctaText={hero.ctaText}
    ctaLink={hero.ctaLink}
    heroImage={hero.heroImage}
  />
  
  <!-- Services Section Placeholder -->
  <section id="services" class="py-20 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="font-heading text-3xl sm:text-4xl font-bold text-primary-dark text-center mb-12">
        Our Cleaning Services
      </h2>
      <div class="grid md:grid-cols-3 gap-8">
        <!-- Carpet Cleaning -->
        <div class="bg-cyan-50 rounded-2xl p-8 text-center hover:shadow-lg transition-shadow">
          <div class="w-16 h-16 bg-primary-cyan rounded-full flex items-center justify-center mx-auto mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-primary-dark" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
          </div>
          <h3 class="font-heading text-xl font-bold text-primary-dark mb-3">Carpet Cleaning</h3>
          <p class="text-gray-600">Deep steam cleaning that removes 99% of allergens and bacteria from your carpets.</p>
        </div>
        
        <!-- Upholstery Cleaning -->
        <div class="bg-cyan-50 rounded-2xl p-8 text-center hover:shadow-lg transition-shadow">
          <div class="w-16 h-16 bg-primary-cyan rounded-full flex items-center justify-center mx-auto mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-primary-dark" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
            </svg>
          </div>
          <h3 class="font-heading text-xl font-bold text-primary-dark mb-3">Upholstery Cleaning</h3>
          <p class="text-gray-600">Revive your sofas and armchairs with our gentle yet effective cleaning process.</p>
        </div>
        
        <!-- Rug Cleaning -->
        <div class="bg-cyan-50 rounded-2xl p-8 text-center hover:shadow-lg transition-shadow">
          <div class="w-16 h-16 bg-primary-cyan rounded-full flex items-center justify-center mx-auto mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-primary-dark" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />
            </svg>
          </div>
          <h3 class="font-heading text-xl font-bold text-primary-dark mb-3">Rug Cleaning</h3>
          <p class="text-gray-600">Specialist care for Persian, Oriental and all types of delicate rugs.</p>
        </div>
      </div>
    </div>
  </section>
  
</Layout>
